<section class="home-product-collection">
  <div class="container">
    <div class="product-grid">
      {% assign collection = collections.frontpage %}
      {% if collection.products.size > 0 %}
        {% for product in collection.products %}
          <div class="product-item">
            <div class="product-image-wrapper">
              <img src="{{ product.featured_image | img_url: '500x500' }}" alt="{{ product.title }}">
              <div
                class="plus-overlay"
                data-product-id="{{ forloop.index }}"
                style="
                  {% if forloop.index == 1 %}
                    top: 10px; right: 10px;
                  {% elsif forloop.index == 2 %}
                    bottom: 10px; left: 10px;
                  {% elsif forloop.index == 3 %}
                    top: 50%; left: 50%;
                  {% else %}
                    top: 20px; right: 20px;
                  {% endif %}
                "
              >
                <span class="plus-icon">+</span>
              </div>
            </div>
            <div class="product-info">
              <p>{{ product.title }}</p>
            </div>
          </div>

          <!-- Dialog Modal for each product -->
          <dialog class="product-modal" id="modal-{{ forloop.index }}">
            <div class="modal-content">
              <span class="close-modal" data-product-id="{{ forloop.index }}">Ã—</span>
              <h2>{{ product.title }}</h2>
              <img src="{{ product.featured_image | img_url: '300x300' }}" alt="{{ product.title }}">
              <p>{{ product.description | strip_html | truncate: 150 }}</p>
              <p>Price: {{ product.price | money }}</p>
              <label for="color">Color:</label>
              <select id="color">
                <option value="white">White</option>
                <option value="black">Black</option>
              </select>
              <label for="size">Size:</label>
              <select id="size">
                <option value="small">Small</option>
                <option value="medium">Medium</option>
                <option value="large">Large</option>
              </select>
              <button class="btn add-to-cart">ADD TO CART</button>
            </div>
          </dialog>
        {% endfor %}
      {% else %}
        <p>No products found in this collection.</p>
      {% endif %}
    </div>
  </div>
</section>

<!-- Updated Modal CSS -->
